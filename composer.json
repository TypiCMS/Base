{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "typicms/base",
    "type": "project",
    "description": "A multilingual CMS built with Laravel",
    "keywords": [
        "cms",
        "multilingual",
        "laravel",
        "typi"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel De Backer",
            "email": "samuel@typidesign.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "bkwld/croppa": "^7.0",
        "eluceo/ical": "^2.13",
        "genealabs/laravel-model-caching": "^12.0",
        "laracasts/presenter": "^0.2.8",
        "laracasts/utilities": "^3.2",
        "laravel/framework": "^12.0",
        "laravel/prompts": "^0.3",
        "laravel/tinker": "^2.9",
        "maatwebsite/excel": "^3.1",
        "msurguy/honeypot": "^1.4",
        "spatie/eloquent-sortable": "^4.4",
        "spatie/laravel-feed": "^4.4",
        "spatie/laravel-one-time-passwords": "^1.0",
        "spatie/laravel-passkeys": "^1.0",
        "spatie/laravel-permission": "^6.16",
        "spatie/laravel-query-builder": "^6.3",
        "spatie/laravel-translatable": "^6.11",
        "symfony/http-client": "^7.2",
        "symfony/mailgun-mailer": "^7.2",
        "typicms/core": "dev-master",
        "typicms/sidebar": "^1.0",
        "typicms/laravel-translatable-bootforms": "^8.0.1",
        "typicms/nestablecollection": "^5.0",
        "typicms/things": "dev-master",
        "typidesign/laravel-artisan-translations": "^3.1",
        "ultrono/laravel-sitemap": "^9.5"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.13",
        "fakerphp/faker": "^1.23",
        "laravel/boost": "^1.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "spatie/laravel-ignition": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "TypiCMS\\Modules\\": "Modules/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi",
            "@php artisan storage:link"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
